{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/create.css') }}">
    <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
{% endblock %}

{% block body %}
    <section class="login">
        <div class="login_box" style="height: 400px; top: 40%" >
            <div class="left">
                <a class="back_button" href="{{ path('app_categories_index') }}">back to list</a>

                <div class="contact">
                    {{ form_start(form) }}
                    <h3 class="title">{{ button_label|default('Create') }} Category</h3>

                    {{ form_row(form.title, {
                        'label': false,
                        'attr': {'placeholder': 'Enter category title'},
                        'label_attr': {'class': 'form-label'}
                    }) }}

                    <button type="submit" class="submit">{{ button_label|default('Save') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="right">
            </div>
        </div>
    </section>
{% endblock %}
